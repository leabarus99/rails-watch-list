<br>
<p class="back"><%= link_to "< Back to list", lists_path %></p>
  <div class="new-button">
    <%= link_to "+ New Bookmark", new_list_bookmark_path(@list)%>
  </div>

<h2><%= @list.name %></h2>

<div class="cards">
 <% @list.bookmarks.each do |l| %>

  <div class="card" style="width: 20rem;">
    <div class="card-img-top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= l.movie.poster_url %>)">
    </div>
    <div class="card-body">
        <h5 class="card-title"><%= l.movie.title %></h5>
        <p class="card-text"><%= l.movie.overview %></p>
        <p class="card-rating text-warning"><%= l.movie.rating %>/10</p>
        <p class="card-comment">"<em><%= l.comment %></em>"</p>

      <div class="delete-button">
        <%= link_to "Delete comment",
          bookmark_path(l),
          method: :delete,
          data: { confirm: "Are you sure?" }, class:"text-decoration-none"%>
      </div>

      </div>

    </div>
  <% end %>
</div>
